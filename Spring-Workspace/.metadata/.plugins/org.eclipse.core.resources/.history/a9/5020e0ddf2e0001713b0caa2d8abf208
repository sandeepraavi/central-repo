//The above method is writing the controller class without using annotation.
//It can be written using annotations as well. Shown below.
package com.firstSpring.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

@Controller
public class FirstController {
@RequestMapping("/welcome/{username}")
	public ModelAndView helloWorld(@PathVariable("username") String name){
		ModelAndView modelAndView = new ModelAndView("HelloPage");
		modelAndView.addObject("welcomeMessage", "Hi,"+ name +" welcome back!");
		return modelAndView;
	}
}
